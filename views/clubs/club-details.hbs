            </form>

            {{#each player}}
            <img src="/images/club-padel1.jpeg" class="rounded mx-auto d-block" alt="...">
            {{/each}}
            <p>11 Pistas disponibles </p>
            <button type="button" class="btn btn-dark">Como llegar</button>
            <button type="button" class="btn btn-dark">Web</button>
            <button type="button" class="btn btn-dark">Llamar</button>
            <a href="/clubs/{{club._id}}/editar" class="btn btn-dark">Editar perfil</a>
            {{#each match}}
            <p>{{match._id}} </p>
            <p>{{date}} </p>
            {{/each}}
