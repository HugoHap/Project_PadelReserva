<div class="container">


    <div class="row">
        <div class="col-md-6">
            <img src="{{clubInfo.image}}" class="figure-img img-fluid rounded" alt="Foto del club">
        </div>

        <div class="col-md-6">
            <h2>{{clubInfo.name}}</h2>
            <p>{{clubInfo.address.street}}, {{clubInfo.address.city}}, {{clubInfo.address.zip}}</p>

            {{#if isFollowing}}
            <form action="/clubs/{{clubInfo._id}}/eliminate-favourite" method="POST">
                <button class="btn btn-secondary" type="submit">Dejar de seguir</button>
            </form>

            {{else}}
            <form action="/clubs/{{clubInfo._id}}/favourite" method="POST">
                <button class="btn btn-danger" type="submit">Seguir</button>
            </form>

            {{/if}}

            <p>Pistas disponibles {{clubInfo.numberOfFields}}</p>
            <a href="{{clubInfo.web}}" class="btn btn-dark">Web</a>
            <p>Contacto: {{clubInfo.phone}}</p>
            {{#if isAdmin}}
            <a href="/clubs/{{clubInfo._id}}/editar" class="btn btn-warning">Editar perfil</a>
            {{/if}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row align-items-center">
        {{#each followers}}
        <img src="{{avatar}}" class="followersPic" alt="user avatar">
        {{/each}}
    </div>
</div>

<div class="container2">
    <div class="row">
        {{#each matchInfo}}
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{date}}</h5>
                    <p class="card-text">{{genre}}</p>
                    <a href="/partidos/{{_id}}" class="btn btn-primary">Ir al partido</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div class="container">
    <div class="row align-items-center">
        <figure id="detailsMap"></figure>
    </div>
</div>

