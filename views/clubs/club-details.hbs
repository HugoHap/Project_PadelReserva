<div class="container">

    <div class="row">
        <div class="col-md-8">
            <img src="/images/club-padel1.jpeg" class="figure-img img-fluid rounded" alt="Foto del club">
            <h2>{{club.name}}</h2>
            <p>{{club.address.street}}, {{club.address.city}}, {{club.address.zip}}</p>
            {{!-- <button type="button" class="btn btn-danger">Seguir</button> --}}
            {{!-- <a href="/clubs/{{_id}}/favourite" class="btn btn-danger">Seguir</a> --}}


