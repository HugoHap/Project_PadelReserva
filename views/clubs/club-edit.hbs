<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Editar club de padel</h1>

            <hr>

            <form action="/clubs/{{_id}}/editar" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="street" class="form-label">Calle</label>
                    <input type="text" class="form-control" id="street" name="street" value="{{address.street}}">
                </div>
                <div class="mb-3">
                    <label for="city" class="form-label">Ciudad</label>
                    <input type="text" class="form-control" id="city" name="city" value="{{address.city}}">
                </div>
                <div class="mb-3">
                    <label for="zip" class="form-label">CÃ³digo postal</label>
                    <input type="text" class="form-control" id="zip" name="zip" value="{{address.zip}}">
                </div>
                <div class="mb-3">
                    <label for="longitude" class="form-label">Longitud</label>
                    <input type="text" class="form-control" id="longitude" name="longitude"
                        value="{{location.coordinates.[1]}}">
                </div>
                <div class="mb-3">
                    <label for="latitude" class="form-label">Latitud</label>
                    <input type="text" class="form-control" id="latitude" name="latitude"
                        value="{{location.coordinates.[0]}}">
                </div>

                {{!--
                <div class="mb-3">
                    <label for="image" class="form-label">Foto</label>
                    <input class="form-control form-control-sm" id="image" type="image" value="{{image}}">
                </div> --}}

                <div class="mb-3">
                    <label for="formFile" class="form-label">Imagen</label>
                    <input class="form-control" type="file" id="formFile" value="{{image}}">
                </div>

                <button type=" submit" class="btn btn-dark">Editar</button>
                <a href="/clubs" class="btn btn-dark">Volver a la lista de clubs</a>
            </form>
            <hr>
            <form action="/clubs/{{_id}}/eliminar" method="POST">
                <button class="btn btn-dark" type="submit">Eliminar club</button>
            </form>








        </div>
    </div>


</div>