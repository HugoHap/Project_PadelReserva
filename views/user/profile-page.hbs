<div class="container profile">
    <div class="row align-items-start">
        <div class="col">
            <img src="{{userDet.avatar}}" class="img-fluid" alt="profile picture">
        </div>
        <div class="col-7">
            <h1>Mi perfil</h1>
            <hr>
            <h2>{{userDet.name}}</h2>
            <p>Partidos</p>
            {{#each matchDet}}
            <p>{{../dateFormat}}</p>
            <p>{{../dayFormat}}</p>
            {{#each club}}
            <p>{{name}}</p>
            {{/each}}
            {{/each}}
            {{#each userDet.favouriteClubs}}
            <p>{{name}}</p>
            <img src="{{image}}" class="imgclubprof" alt="Imagen Club">
            {{/each}}

            <a href="/perfil/{{userDet._id}}/editar" class="btn btn-dark">Editar perfil</a>
            <a href="/partidos/crear" class="btn btn-dark">Crear partido</a>
        </div>
    </div>
</div>