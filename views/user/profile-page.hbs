<div class="container profile">
    <div class="row align-items-start">
        <div class="col">
            <img src="{{userDet.avatar}}" class="img-fluid" alt="profile picture">

            <h3>Clubes Favoritos: </h3>
            {{#each userDet.favouriteClubs}}
            <p>{{name}}</p>
            <img src="{{image}}" class="imgclubprof" alt="Imagen Club">
            {{/each}}

        </div>
        <div class="col-7">
            <h1>Mi perfil</h1>
            <hr>
            <h2>{{userDet.name}}</h2>
            <hr>
            <h3>Partidos disponibles: </h3>

            <div class="row match-list">
                {{#each matchDet}}
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="col">
                                <h5 class="card-title">{{../day}} {{../date}}</h5>
                                <h5 class="card-text">{{club.name}}</h5>
                            </div>
                            <div class="col avatarimg">
                                <p> Numero Jugadores:</p>
                                {{#each players}}
                                <img src="{{avatar}}" class="imgavatar" alt="imagen perfil">
                                {{/each}}
                            </div>
                            <p class="card-text"> <strong>Genero: </strong>{{genre}}</p>
                            <p class="card-text"> <strong>Precio: </strong>{{price}}â‚¬</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

            <a href="/perfil/{{userDet._id}}/editar" class="btn btn-dark">Editar perfil</a>
            <a href="/partidos/crear" class="btn btn-dark">Crear partido</a>
        </div>
    </div>
</div>