<div class="container">

    <hr>

    <div class="row">
        <div class="col-md-8">
            <h3>Detalles</h3>
            <p>Fecha:{{detMatch.date}}</p>
            <p>Lugar:{{detMatch.club.name}}</p>
        </div>
        <div class="col-md-4">
            <h3>Jugadores</h3>
            {{#each detMatch.players}}
            <p>{{name}}</p>
            {{/each}}
        </div>
    </div>
    <form action="/partidos/{{id}}/unirse" method="POST">
        <button class="btn btn-dark" type="submit">Unirse</button>
    </form>

    {{#each comments}}
    <p>{{user.name}}</p>
    <p>{{content}}</p>
    {{/each}}

    <hr>

    <div class="container">
        <div class="row reviews-form">
            <form action="/comentario/{{detMatch.id}}/crear" method="POST">
                <div class="row">
                    <div class="col-md-4">
                        <label for="exampleFormControlTextarea1" class="form-label">
                            <h6>Chat de partido</h6>
                        </label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" name="content"
                            type="text"></textarea>
                    </div>

                    <div class="col-sm-2 mt-5">
                        <button type="submit" class="btn btn-outline-dark"
                            style="width: 7rem;">Enviar</button>
                    </div>
            </form>
        </div>
    </div>

    <a href="/partidos/{{detMatch.id}}/resultado" class="btn btn-danger">Introducir resultado</a>

    <hr>

    <form action="/partidos/{{detMatch.id}}/delete" method="POST">
        <button class="btn btn-sm btn-warning" type="submit">Eliminar</button>
    </form>

    <a href="/partidos/{{detMatch.id}}/edit" class="btn btn-dark">Editar partido</a>

    <a href="/partidos" class="btn btn-dark">Volver a la lista</a>

</div>

<div class="container">
    <div class="row align-items-center">
        <figure id="clubsMap"></figure>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/club-map.js"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCtf8mk6VyrR7KMMLz5WRmqhcbrtuTYDCg&callback=initMap"></script>