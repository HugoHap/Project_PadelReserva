<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Editar Partido</h1>

            <hr>

            <form action="/partidos/{{id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Fecha</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{date}}">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Genero</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{genre}}">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Jugadores</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{players}}">
                </div>
                <div class="mb-3">
                    <label class="form-label">Lugar</label>
                    <select id="cast" class="form-select" name="cast">
                        {{#each club}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Guardar edici√≥n</button>
                <a href="/" class="btn btn-dark">Volver al incio</a>
            </form>

            <hr>

        </div>
    </div>

</div>